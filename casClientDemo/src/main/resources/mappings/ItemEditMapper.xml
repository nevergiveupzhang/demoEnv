<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.pms.dataService.dao.ItemEditDao">
	<select id="query" parameterType="java.util.Map"
		resultMap="ItemEdit">
		select * from item_edit
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="submitterId != null">
				and submitterId = #{submitterId}
			</if>
            <if test="type != null">
                and type = #{type}
            </if>
		</trim>
	</select>
	<update id="update" parameterType="ItemEdit">
		update item_edit
		<set>
			<if test="itemId != null">
				item_id=#{itemId},
			</if>
			<if test="jsonData != null">
				json_data=#{jsonData},
			</if>
			<if test="updateTime != null">
				update_time=#{updateTime},
			</if>
			<if test="submitterId != null">
				submitterId=#{submitterId},
			</if>
			<if test="type != null">
				type=#{type},
			</if>
			<if test="editPId != null">
				editPId=#{editPId},
			</if>
			<if test="editCId != null">
				editCId=#{editCId},
			</if>
		</set>
		<where>
			id=#{id}
		</where>
	</update>
</mapper>